<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/navigation_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fitsSystemWindows="false"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/top_bac"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/left_top" />

    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/my_account"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:clickable="true"
                android:layout_height="50dp"
                android:layout_below="@+id/top_bac"
                android:layout_alignParentStart="true">
                <ImageView
                    android:src="@mipmap/myaccount"
                    android:layout_width="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="20dp"/>

                <TextView
                    android:paddingLeft="20dp"
                    android:text="账户设置"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/personal_center"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:clickable="true"
                android:layout_height="50dp"
                android:layout_below="@+id/top_bac"
                android:layout_alignParentStart="true">

                <ImageView
                    android:src="@mipmap/person_center"
                    android:layout_width="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="20dp"/>

                <TextView
                    android:paddingLeft="20dp"
                    android:text="个人中心"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"/>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/rgl_manger"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:clickable="true"
                android:layout_height="50dp"
                android:layout_below="@+id/top_bac"
                android:layout_alignParentStart="true">

                <ImageView
                    android:src="@mipmap/rel_manger"
                    android:layout_width="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="20dp"/>

                <TextView
                    android:paddingLeft="20dp"
                    android:text="红绿灯管理"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/bus_query"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:clickable="true"
                android:layout_height="50dp"
                android:layout_below="@+id/top_bac"
                android:layout_alignParentStart="true">

                <ImageView
                    android:src="@mipmap/bus"
                    android:layout_width="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="20dp"/>

                <TextView
                    android:paddingLeft="20dp"
                    android:text="路况查询"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"/>


            </LinearLayout>



            <LinearLayout
                android:id="@+id/peccancy_manger"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:clickable="true"
                android:layout_height="50dp"
                android:layout_below="@+id/top_bac"
                android:layout_alignParentStart="true">

                <ImageView
                    android:src="@mipmap/icon_peccancy"
                    android:layout_width="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="20dp"/>

                <TextView
                    android:paddingLeft="20dp"
                    android:text="违章管理"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/snap_manger"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:clickable="true"
                android:layout_height="50dp"
                android:layout_below="@+id/top_bac"
                android:layout_alignParentStart="true">

                <ImageView
                    android:src="@mipmap/icon_snap"
                    android:layout_width="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="20dp"/>

                <TextView
                    android:paddingLeft="20dp"
                    android:text="我的座驾"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/bill_manager"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:clickable="true"
                android:layout_height="50dp"
                android:layout_below="@+id/top_bac"
                android:layout_alignParentStart="true">

                <ImageView
                    android:src="@mipmap/icon_bill"
                    android:layout_width="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="20dp"/>

                <TextView
                    android:paddingLeft="20dp"
                    android:text="我的交通"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"/>


            </LinearLayout>


        </LinearLayout>

    </ScrollView>
    
</LinearLayout>